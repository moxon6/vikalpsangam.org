{% extends 'layouts/_base.twig' %}

{% set page_class = 'page-front' %}

{% block page %}
  {{ function('do_shortcode', '[smartslider3 slider="homepage-slider"]') }}
  {% for section in front_page_sections %}
    <section class="page-front__section">
      <div class="page-front__header-container">
        <h3 class="page-front__header">
          {{ section.header }}
        </h3>
      </div>
      <div class="page-front__post-list">
        {% for post in section.posts %}
          {% include 'partials/_highlight-card.twig' %}
        {% endfor %}
      </div>
    </section>
  {% endfor %}
{% endblock %}
