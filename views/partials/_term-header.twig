<a class="term-header" href="{{ term.link }}">
    {% set src = Image(term.meta('image')).src %}

    <div class="term-header__content">
        {% if src %}
            <img class="term-header__category-image" src="{{ src }}" />
        {% endif %}
        <span class="term-header__category-name">{{ term.name }}</span>
    </div>
</a>
