<footer class="footer container-fluid">
    <div class="footer__column-left">
        <div class="footer-logo">
            <a href="/"><img class="img-fluid" src="{{ footer_logo }} " /></a>
        </div>
        <div class="footer-social-links-top">
            {{ get_social_icons() }}
        </div>
    </div>

    <div class="footer__column-center">
        <h2 class="subscribe-title">
            Newsletter
        </h2>
        <p class="subscribe-description">
            Enter your email address below to subscribe to our monthly
            newsletter
        </p>
        <form action="{{ MAILCHIMP_SUBMIT_URL }}" method="post">
            <input type="email"
                name="EMAIL"
                required
                placeholder="Email address" />
            <button type="submit">Sign up</button>
        </form>
    </div>

    <div class="footer__column-right">
        {% for menu in footer_menus %}
            <div class="list-items">
                <ul class="list-group">
                    {% for item in menu.items %}
                        <li class="list-group-item {{ item.classes|join(
                                ' '
                            ) }}">
                            <a class="list-group-item-heading"
                                href="{{ item.link }}">
                                {{ item.title }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
    </div>
</footer>

{{ function('wp_footer') }}
