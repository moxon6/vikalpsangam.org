<div class="highlight-card">
    <div class="row g-0 highlight-card-row">
        <div class="col-3 highlight-card-thumbnail-col">
            <a href="{{ post.link }}">
                <img src="{{ post.thumbnail.src('thumbnail') }}"
                    class="img-fluid featured-list-image" />
            </a>
        </div>
        <div class="col-9 highlight-card-text-col">
            <div class="card-body featured-list-card-body">
                <a href="{{ post.link }}">
                    <h6 class="highlight-card-title">
                        {{ post.title }}
                    </h6>
                </a>
                <p class="highlight-card-content">
                    {{ post.preview.read_more(false).length(20) }}
                </p>
            </div>
        </div>
    </div>
</div>
