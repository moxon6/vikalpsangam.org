{% set logo %}
    <a class="home-link" href="/">
        <img src="/wp-content/themes/vikalpsangam.org/images/header_big_logo.png" />
    </a>
{% endset %}

{% set logoMobile %}
    <a class="home-link" href="/"><img class="logo-primary" /></a>
{% endset %}

{% set socialIcons %}
    <li class="navbar-social-links">
        <a class="header-social-small" href="https://twitter.com/VikalpSangam">
            <img src="/wp-content/themes/vikalpsangam.org/images/social/twitter.png?v=5.0.19" />
        </a>
        <a class="header-social-small"
            href="https://www.facebook.com/VikalpSangam">
            <img src="/wp-content/themes/vikalpsangam.org/images/social/facebook.png?v=5.0.19" />
        </a>
        <a class="header-social-small"
            href="https://www.instagram.com/vikalpsangam">
            <img src="/wp-content/themes/vikalpsangam.org/images/social/instagram.png?v=5.0.19" />
        </a>
    </li>
{% endset %}

{% set searchForm %}
    <li class="mega-menu-item">
        {% include 'partials/_search-form.twig' %}
    </li>
{% endset %}

{{
    get_secondary_header()
        |replace({
            '<social-icons></social-icons>': socialIcons
        })
}}

{{
    get_primary_header()
        |replace({
            '<logo></logo>': logo
        })
        |replace({
            '<logo-primary></logo-primary>': logoMobile
        })
        |replace({
            '<social-icons></social-icons>': socialIcons
        })
        |replace({
            '<search-bar></search-bar>': searchForm
        })
}}
