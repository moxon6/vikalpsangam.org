{
  "name": "vikalpsangam",
  "version": "1.6.2",
  "description": "http://vikalpsangam.org Theme",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "WordPress",
    "Theme",
    "http://vikalpsangam.org/",
    "vikalpsangam"
  ],
  "homepage": "http://vikalpsangam.org/",
  "devDependencies": {
    "@wordpress/scripts": "^12.1.0",
    "browser-sync": "^2.26.13",
    "dir-archiver": "^1.1.1",
    "husky": "^4.3.0",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "rtlcss": "^2.5.0",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-prettier": "^1.1.2"
  },
  "rtlcssConfig": {
    "options": {
      "autoRename": false,
      "autoRenameStrict": false,
      "blacklist": {},
      "clean": true,
      "greedy": false,
      "processUrls": false,
      "stringMap": []
    },
    "plugins": [],
    "map": false
  },
  "scripts": {
    "setup-hooks": "npx husky install",
    "watch:scss": "node-sass -o . sass/style.scss -w",
    "build:scss": "node-sass --importer node_modules/node-sass-package-importer/dist/cli.js -o . sass/style.scss",
    "build:scss-rtl": "rtlcss style.css style-rtl.css",
    "browsersync": "browser-sync start --files \"**/*.(php|js|css)\"",
    "lint:scss": "wp-scripts lint-style sass/**/*.scss",
    "lint:js": "wp-scripts lint-js 'js/**/*.js'",
    "bundle": "dir-archiver --src . --dest ../vikalpsangam.zip --exclude $(cat .buildignore)",
    "copy-fonts": "cp node_modules/bootstrap-sass/assets/fonts/bootstrap/* fonts -n"
  },
  "husky": {
    "hooks": {
      "pre-commit": "mkdir -p .git; ./update-version; git add version.php"
    }
  },
  "dependencies": {
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "node-sass-package-importer": "^5.3.2"
  }
}
