{
    "name": "vikalpsangam",
    "version": "1.5.0",
    "description": "http://vikalpsangam.org Theme",
    "license": "GPL-2.0-or-later",
    "keywords": [
        "WordPress",
        "Theme",
        "http://vikalpsangam.org/",
        "vikalpsangam"
    ],
    "homepage": "http://vikalpsangam.org/",
    "devDependencies": {
        "@wordpress/scripts": "^12.1.0",
        "dir-archiver": "^1.1.1",
        "husky": "^4.3.0",
        "node-sass": "^4.14.1",
        "rtlcss": "^2.5.0",
        "stylelint": "^13.8.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-recess-order": "^2.3.0",
        "stylelint-prettier": "^1.1.2"
    },
    "rtlcssConfig": {
        "options": {
            "autoRename": false,
            "autoRenameStrict": false,
            "blacklist": {},
            "clean": true,
            "greedy": false,
            "processUrls": false,
            "stringMap": []
        },
        "plugins": [],
        "map": false
    },
    "scripts": {
        "setup-hooks": "npx husky install",
        "build": "parcel build --no-minify src/index.js --public-url /wp-content/themes/vikalpsangam/dist",
        "build:scss-rtl": "rtlcss style.css style-rtl.css",
        "lint:scss": "wp-scripts lint-style src/**/*.scss",
        "lint:js": "wp-scripts lint-js 'src/**/*.js'",
        "bundle": "dir-archiver --src . --dest ../vikalpsangam.zip --exclude $(cat .buildignore)",
        "copy-fonts": "cp node_modules/bootstrap-sass/assets/fonts/bootstrap/* fonts -n"
    },
    "husky": {
        "hooks": {
            "pre-commit": "mkdir -p .git; ./update-version; git add version.php"
        }
    },
    "dependencies": {
        "bootstrap": "^3.1.1",
        "bootstrap-sass": "3.1.1",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.22.1",
        "leaflet": "^1.7.1",
        "leaflet.markercluster": "^1.4.1",
        "node-sass-package-importer": "^5.3.2",
        "parcel": "^1.12.4",
        "prettier": "^2.2.0"
    }
}
