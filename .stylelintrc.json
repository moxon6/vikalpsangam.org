{
    "extends": [
        "stylelint-config-prettier"
    ],
    "plugins": [
        "stylelint-prettier"
    ],
    "rules": {
        "no-descending-specificity": null,
        "selector-attribute-quotes": null,
        "block-no-empty": [
            true,
            {
                "ignore": [
                    "comments"
                ]
            }
        ],
        "indentation": 2
    }
}