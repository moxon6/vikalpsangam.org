{% extends "base.twig" %}

{% block content %}
	<div class="d-flex justify-content-between mb-4">
		<h2>{{post.title}}</h2>
		<div>
			<a href="/stories/" class="btn btn-primary">Show all latest stories</a>
		</div>
	</div>

	<section class="container-fluid">
		<div class="row">
			{% for category_group in stories_by_category %}

				<div class="col-xs-12 category-topping-wrapper">
					{% include 'partials/category-header.twig' with {'category': category_group.category } only %}

					<div class="container-fluid p-0">
						<div class="row category-page-category-list-wrapper">
							{% for post in category_group.posts %}
								<div class="col-xs-4 col-md-6 col-lg-4 pb-4">
									{% include 'partials/article-tile.twig' with {'post': post } only %}
								</div>
							{% endfor %}
						</div>
					</div>

				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
