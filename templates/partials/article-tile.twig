<div class="article-tile">
	<div class="card article-tile-card">

		{% if article %}

			<a class="see-all-stories category-card-header-wrapper" href="{{ category.link }}">
				<div class="card-header header">
					<img class="category-image" src="{{ Image(category.meta('image')).src }}"/>
					<span class="category-name">{{ category.name }}</span>
				</div>
			</a>

		{% endif %}

		<a href="{{ post.link }}">
			<img src="{{ post.thumbnail.src("large") }}" class="card-img-top article-tile-image">
		</a>
		<div class="card-body">
			<a href="{{ post.link }}">
				<h6 class="card-title article-tile-title">{{ post.title }}</h6>
			</a>
			<p class="card-text article-tile-text">{{ post.preview.read_more(false).length(20) }}</p>
		</div>
		<footer class="card-footer d-flex justify-content-end p-0">
			<a href="{{ post.link }}" class="btn btn-primary btn-sm">Read More</a>
		</footer>
	</div>
</div>
