<div id="vikalpsangam-org-carousel">
	<div id="mainSlider">
		{% for post in carousel_items %}
			<div class="slider-item">
				<a href="#">
					<img src="{{ post.thumbnail.src("large") }}" class="carousel-thumbnail">
					<div class="slick-carousel-caption">
						<h4>{{ post.title }}</h4>
						{{ post.preview.read_more(false).length(20) }}
					</div>
				</a>
			</div>
		{% endfor %}
	</div>
</div>

<script>
	jQuery(window).ready(() => {
jQuery("#mainSlider").slick({
infinite: true,
speed: 300,
slidesToShow: 1,
centerMode: true,
variableWidth: true,
mobileFirst: true
});
});
</script>
